{
  "info": {
    "name": "Food API (Split)",
    "_postman_id": "b9f2b7ac-2222-4444-aaaa-abcdef123456",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/healthz"
      }
    },
    {
      "name": "Foods \u2192 List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/foods?q=granola&limit=10"
      }
    },
    {
      "name": "Foods \u2192 Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"fdcId\": 1106281, \"description\": \"Granola Demo\", \"foodClass\": \"Branded\"}"
        },
        "url": "{{baseUrl}}/api/foods"
      }
    },
    {
      "name": "Foods \u2192 Get (join)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/foods/1106281?includeNutrients=true"
      }
    },
    {
      "name": "Foods \u2194 Nutrients \u2192 Add",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"foodNutrientId\": 999, \"amount\": 1.23, \"nutrientId\": 2000, \"nutrientName\": \"Total Sugars\", \"unitName\": \"g\"}"
        },
        "url": "{{baseUrl}}/api/foods/1106281/nutrients"
      }
    },
    {
      "name": "Nutrients \u2192 List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/nutrients?foodFdcId=1106281"
      }
    },
    {
      "name": "Nutrients \u2192 Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"foodFdcId\": 1106281, \"nutrientId\": 1003, \"nutrientName\": \"Protein\", \"unitName\": \"g\", \"amount\": 11.1}"
        },
        "url": "{{baseUrl}}/api/nutrients"
      }
    }
  ]
}
{
  "name": "food-api-split",
  "version": "1.0.0",
  "description": "Express + MongoDB CRUD API for Food and Nutrient (separate collections) with relation endpoints, import pipeline, tests, and Postman.",
  "type": "module",
  "main": "src/server.mjs",
  "scripts": {
    "start": "node src/server.mjs",
    "dev": "node src/server.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "seed:chunks": "node scripts/seed-split-from-chunks.mjs",
    "chunk:foods": "node scripts/chunk-ndjson.mjs data/foods.ndjson 10000 data/chunks foods",
    "chunk:nutrients": "node scripts/chunk-ndjson.mjs data/nutrients.ndjson 10000 data/chunks nutrients"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.0.0"
  }
}